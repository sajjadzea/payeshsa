name: CI/CD

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        service: [frontend, services/news, services/event, services/file, services/notification]
    defaults:
      run:
        working-directory: ${{ matrix.service }}
    steps:
      - uses: actions/checkout@v3
      - name: Setup Node.js
        if: endsWith(matrix.service, '/news') || endsWith(matrix.service, '/file') || endsWith(matrix.service, '/notification') || matrix.service == 'frontend'
        uses: actions/setup-node@v3
        with:
          node-version: '18'
      - name: Install dependencies
        run: |
          npm ci
      - name: Run tests
        run: |
          npm test
      - name: Build Docker image
        run: |
          docker build -t ghcr.io/${{ github.repository }}/$SERVICE:${{ github.sha }} .
      - name: Push to GitHub Container Registry
        run: |
          echo ${{ secrets.GITHUB_TOKEN }} | docker login ghcr.io -u ${{ github.actor }} --password-stdin
          docker push ghcr.io/${{ github.repository }}/$SERVICE:${{ github.sha }}
